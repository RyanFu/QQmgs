@using Twitter.App.Models.ViewModels
@model RegisterViewModel
@{
    ViewBag.Title = "全球某工商 - 连接每一位商大师生";
    Layout = "";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <title>全球某工商 - 连接每一位商大师生</title>
    <meta name="description" content="qqmgs.com login page.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link href="~/Content/particles.js/style.css" rel="stylesheet" media="screen">
    <link href="~/Content/particles.js/zh.css" rel="stylesheet" media="screen">
    <link href="~/Content/materizeCss/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/Content/materizeCss/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
</head>
<body>
    <!-- particles.js container -->
    <div id="particles-js" style="position: absolute; top: 0; z-index: 0; display: block; width: 100%; height: 100%"></div>

    <div class="index-main" style="position: relative; z-index: 1">
        <div class="index-main-body">
            <div class="index-header">
                @*<h1 class="logo hide-text">知乎</h1>*@
                <h1 style="font-size: 60px; margin-top: 0px">全球某工商</h1>
                <h2 class="subtitle">连接每一位商大师生</h2>
            </div>
            <div class="desk-front sign-flow clearfix sign-flow-simple">
                <div class="index-tab-navs">
                    <div class="navs-slider" data-active-index="0">
                        <a href="@Url.Action("Register")" class="active">注册</a>
                        <a href="@Url.Action("Login")">登录</a>
                        <span class="navs-slider-bar"></span>
                    </div>
                </div>
                <div class="view view-signup selected" data-za-module="SignUpForm">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })

                        <form>
                            <div class="group-inputs">
                                <div class="input-field" style="margin-top: 0px">
                                    <input name="RealName" value="@Model.RealName" placeholder="姓名" id="first_name" type="text" style="margin-bottom: 0px; width: 95%; padding-left: 5%" class="validate">
                                </div>
                                <div class="input-field" style="margin-top: 0px">
                                    <input name="PhoneNumber" value="@Model.PhoneNumber" placeholder="手机号" id="phone_number" type="text" style="margin-bottom: 0px; width: 95%; padding-left: 5%" class="validate">
                                </div>
                                <div class="input-field" style="margin-top: 0px">
                                    <input name="Password" value="@Model.Password" placeholder="密码 (不少于4位)" id="password" type="password" style="margin-bottom: 0px; width: 95%; padding-left: 5%" class="validate">
                                </div>
                                @*<div class="input-field" style="margin-top: 0px">
                                    <input name="ConfirmPassword" value="@Model.ConfirmPassword" placeholder="再次确认密码" id="confirm_password" type="password" style="margin-bottom: 0px; width: 95%; padding-left: 5%" class="validate">
                                </div>*@
                                <div class="input-field" style="margin-top: 0px">
                                    <input name="Email" value="@Model.Email" placeholder="电子邮箱" id="Email_address" type="Email" style="margin-bottom: 0px; width: 95%; padding-left: 5%" class="validate">
                                </div>
                                <div class="input-field" style="margin-top: 0px">
                                    <input name="Class" value="@Model.Class" placeholder="专业班级" id="major_class" type="text" style="margin-bottom: 0px; border-bottom: none; width: 95%; padding-left: 5%" class="validate">
                                </div>
                            </div>
                            <div class="button-wrapper command" style="margin-top: 5px">
                                <!-- Switch -->
                                <div class="switch center">
                                    <label>
                                        中文版
                                        <input type="checkbox" name="locale">
                                        <span class="lever"></span>
                                        International
                                    </label>
                                </div>
                                <button class="sign-button submit" type="submit" style="margin-top: 10px">注册全球某工商</button>
                            </div>
                        </form>
                    }
                    <div class="QRCode" style="margin-top: 28px">
                        <button class="QRCode-toggleButton" onclick="location.href = '@Url.Action("About", "Home")'" type="button">
                            <span class="sprite-global-icon-qrcode"></span>
                            <span class="QRCode-toggleButtonText ">点击了解全球某工商.com</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer" style="position: relative; z-index: 1">
        <span>2016 全球某工商</span>
        <span class="dot">·</span>
        <a href="@Url.Action("About", "Home")" class="footer-mobile-show">联系我们</a>
        <span class="dot">·</span>
        <a href="@Url.Action("Job", "Home")">来全球某工商工作</a>
        <span class="dot">·</span>
        <a href="http://www.miibeian.gov.cn/" target="_blank">浙 ICP 备 15036767 号</a>
        <span class="dot">·</span>
        <span>浙公网安备 33011802000821 号</span>
    </div>

    <!-- martial scripts -->
    <script src="~/Scripts/MaterizeJS/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/MaterizeJS/materialize.js"></script>

    <!-- scripts -->
    <script src="~/Scripts/particles.js/particles.js"></script>
    <script src="~/Scripts/particles.js/app.js"></script>

</body>
</html>