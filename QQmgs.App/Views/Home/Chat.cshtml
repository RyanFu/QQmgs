@{
    Layout = "~/Views/Shared/_Materize_Layout.cshtml";
}

<style>
    .notification {
        color: #bbb;
        font-size: 12px;
        padding-top: 2px !important;
        padding-bottom: 1px !important;
        padding-left: 15px !important;
    }
    .msg {
        font-size: 13px;
        padding-left: 15px !important;
    }
</style>

<h5 id="title" class="center">商大<a style="color: gray; font-weight: bold">匿名</a>群聊</h5>
<div class="container">
    <input type="hidden" id="displayname" />
    <ul class="collection with-header" id="discussion" style="overflow: auto; height: 365px"></ul>
    <div class="row center" style="margin: auto">
        <div class="col s8">
            <input type="text" id="message" placeholder="输入你想说的话" />
        </div>
        <div class="col s2">
            <input class="waves-effect waves-light btn" type="button" id="sendmessage" value="Send" />
        </div>
    </div>
</div>

@section scripts {
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/Scripts/jquery.signalR-2.1.2.min.js"></script>
    <script src="~/signalr/hubs"></script>

    <script src="~/Scripts/jQuery.tmpl.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/Scripts/Chat/Chatting.js"></script>
}