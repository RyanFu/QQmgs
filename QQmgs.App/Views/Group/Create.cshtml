@model Twitter.App.Models.BindingModels.CreateGroupBindingModel
@{
    ViewBag.Title = "New Group";
    Layout = "~/Views/Shared/_Materize_Layout.cshtml";
}

<nav style="background: #009688">
    <div class="nav-wrapper container">
        <div class="col s12">
            <a href="@Url.Action("Index")" class="breadcrumb">首页</a>
            <a href="#" class="breadcrumb">创建新的兴趣小组</a>
        </div>
    </div>
</nav>

<div class="section no-pad-bot" id="index-banner">
    <div class="container center">
        <h2>@ViewBag.Title.</h2>
        @using (Html.BeginForm("Create", "Group", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(string.Empty, new { @class = "text-danger" })
            <div class="row">
                <div class="input-field col s12 left">
                    <input id="group_name" type="text" class="validate" name="Name">
                    <label for="group_name">兴趣小组名字</label>
                </div>
                <div class="input-field col s12 left">
                    <input id="group_decription" type="text" class="validate" name="Description">
                    <label for="group_decription">兴趣小组的描述</label>
                </div>
               <div class="switch col s12 left">
                    <label>
                        创建公开兴趣小组(Public)
                        <input type="checkbox" name="IsPrivate">
                        <span class="lever"></span>
                        创建私有兴趣小组(Private)
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="form-group col s12">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Post" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

