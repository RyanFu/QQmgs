@model Twitter.App.Models.BindingModel.CreateTweetBindingModel
@{
    ViewBag.Title = "发言";
    Layout = "~/Views/Shared/_Materize_Layout.cshtml";
}

<nav style="background: #009688">
    <div class="nav-wrapper container">
        <div class="col s12">
            <a href="@Url.Action("Index", "Group")" class="breadcrumb">首页</a>
            <a href="@Url.Action("Get", "Group", new {groupId = ViewData["GroupId"], p = 1})" class="breadcrumb">@ViewData["GroupName"]</a>
            <a href="#" class="breadcrumb">发言</a>
        </div>
    </div>
</nav>

<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <h2>@ViewBag.Title.</h2>

        @using (Html.BeginForm("CreateTweet", "Tweets", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(string.Empty, new { @class = "text-danger" })
            <div class="row">
                <div class="input-field col s12 left">
                    <textarea style="font-size: 3rem" class="materialize-textarea" id="input_text" type="text" length="250" name="Text"></textarea>
                    <label for="input_text"><a style="font-size: 16px; color: #009688">在这里和大家分享你此时此刻的想法 ...</a></label>
                </div>

                <div class="input-field col s12 left" style="display: none !important;">
                    <input id="group-id" type="text" class="validate" name="GroupId" value="@ViewData["GroupId"]">
                </div>

            </div>
            <div class="row center">
                <div class="form-group col s12">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Post" class="btn btn-default"/>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
        }
    </div>
</div>
