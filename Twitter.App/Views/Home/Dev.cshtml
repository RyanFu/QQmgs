<body>
<nav class="light-blue lighten-1" role="navigation">
    <div class="nav-wrapper container">
        <a id="logo-container" href="#" class="brand-logo">QQmgs.com Develop</a>
        <ul class="right hide-on-med-and-down">
            @if (Request.IsAuthenticated)
            {
                <li><a href="@Url.Action("Index", "Manage")">@Resources.Hello @User.Identity.GetUserName() !</a></li>
            }
            else
            {
                <li><a href="@Url.Action("Register", "Account")">@Resources.Register</a></li>
                <li><a href="@Url.Action("Login", "Account")">@Resources.LogInButton</a></li>
            }
        </ul>

        <ul id="nav-mobile" class="side-nav">
            @if (Request.IsAuthenticated)
            {
                <li><a href="@Url.Action("Index", "Manage")">@Resources.Hello @User.Identity.GetUserName() !</a></li>
            }
            else
            {
                <li><a href="@Url.Action("Register", "Account")">@Resources.Register</a></li>
                <li><a href="@Url.Action("Login", "Account")">@Resources.LogInButton</a></li>
            }
        </ul>
        <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
    </div>
</nav>




