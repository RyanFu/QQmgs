@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Upload", "Photo", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row" style="margin-left: 10px">
            <div class="file-field input-field col s4">
                <div class="btn">
                    <span>File</span>
                    <input type="file" name="File">
                </div>
                <div class="file-path-wrapper show-on-large show-on-medium hide-on-small-and-down">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <div class="input-field col s4 hide-on-small-and-down">
                <input id="description" type="text" class="validate" name="Description">
                <label for="description">Description</label>
            </div>
            <div>
                <a>Note: 图片最大不能超过 3MB 哦</a>
            </div>
            <div class="col s4" style="margin-top: 4px; padding-left: 55px">
                <input class="waves-effect waves-light btn" type="submit" value="Post" />
            </div>
        </div>
    }
}
else
{
    <h5>你需要首先登陆全球某工商才能post,请点击 <a href="@Url.Action("Login", "Account", new { returnUrl = @Url.Action("index", "Photo") })">登陆</a></h5>
}

