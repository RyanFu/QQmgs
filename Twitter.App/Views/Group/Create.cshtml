@model Twitter.App.Models.ViewModels.GroupVieModels
@{
    ViewBag.Title = "New Group";
    Layout = "~/Views/Shared/_Materize_Layout.cshtml";
}

<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <h2>@ViewBag.Title.</h2>
        @using (Html.BeginForm("Create", "Group", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(string.Empty, new { @class = "text-danger" })
            <div class="row">
                <div class="form-group col s4">
                    @Html.LabelFor(t => t.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(t => t.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(t => t.Name, string.Empty, new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col s4">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Send" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

