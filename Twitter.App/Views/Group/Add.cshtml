@model Twitter.App.Models.ViewModels.TweetViewModel
@{
    ViewBag.Title = "New Tweet";
}
@{
    Layout = "~/Views/Shared/_Materize_Layout.cshtml";
}

<h2>@ViewBag.Title.</h2>
@using (Html.BeginForm("CreateTweet", "Tweets", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(string.Empty, new { @class = "text-danger" })
    <div class="row">
        <div class="form-group col s4">
            @Html.LabelFor(t => t.Text, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(t => t.Text, new { @class = "form-control" })
                @Html.ValidationMessageFor(t => t.Text, string.Empty, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="display: none">
            @Html.LabelFor(t => t.GroupId, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(t => t.GroupId, new { @class = "form-control", @Value = ViewData["GroupId"] })
            </div>
        </div>
    </div>
        <div class="row">
            <div class="form-group col s4">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Send" class="btn btn-default" />
                </div>
            </div>
        </div>

}

<div class="container">

</div>
