@{
    Layout = null;
}

@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />
    <title>@Resources.QQmgscom</title>

    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/materizeCss/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="~/Content/materizeCss/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
</head>
<body>
    <!-- Dropdown Structure -->
    <ul id="dropdown1" class="dropdown-content">
        <li><a href="#!">one</a></li>
        <li><a href="#!">two</a></li>
        <li class="divider"></li>
        <li><a href="#!">three</a></li>
    </ul>
    <nav class="white" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" href="@Url.Action("Index", "Home")" class="brand-logo">@Resources.QQmgscom</a>
            <ul class="right hide-on-med-and-down">
                @if (Request.IsAuthenticated)
                {
                    <li>@*<a class="dropdown-button" href="#!" data-activates="dropdown1">Dropdown<i class="material-icons right">arrow_drop_down</i></a>*@</li>
                    <li><a href="@Url.Action("index", "CourseReview")">商大点评</a></li>
                    <li><a href="@Url.Action("index", "Group")">@Resources.Group</a></li>
                    <li><a href="@Url.Action("index", "Photo")">@Resources.PhotoSharing</a></li>
                    <li><a href="#"><i class="material-icons">search</i></a></li>
                    <li><a href="@Url.Action("Index", "Home")"><i class="material-icons">view_module</i></a></li>
                    <li><a href="@Url.Action("Index", "Manage")"><i class="material-icons">more_vert</i></a></li>
                }
                else
                {
                    <li><a href="@Url.Action("index", "Photo")">@Resources.PhotoSharing</a></li>
                    <li><a href="@Url.Action("Register", "Account")">@Resources.Register</a></li>
                    <li><a href="@Url.Action("Login", "Account")">@Resources.LogInButton</a></li>
                }
            </ul>

            <ul id="nav-mobile" class="side-nav">
                @if (Request.IsAuthenticated)
            {
                    <li><a href="@Url.Action("index", "CourseReview")">商大点评</a></li>
                    <li><a href="@Url.Action("index", "Group")">@Resources.Group</a></li>
                    <li><a href="@Url.Action("index", "Photo")">@Resources.PhotoSharing</a></li>
                    <li><a href="@Url.Action("Index", "Manage")">@Resources.Hello @User.Identity.GetUserName() !</a></li>
                }
                else
                {
                    <li><a href="@Url.Action("index", "Photo")">@Resources.PhotoSharing</a></li>
                    <li><a href="@Url.Action("Register", "Account")">@Resources.Register</a></li>
                    <li><a href="@Url.Action("Login", "Account")">@Resources.LogInButton</a></li>
                }
            </ul>
            <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
        </div>
    </nav>

    <main>
        @RenderBody()
    </main>

    <footer class="page-footer teal">
        <div class="container hide-on-small-and-down">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">全球某工商简介</h5>
                    <p class="grey-text text-lighten-4">
                        实时社交网络，现在有类似 Twitter 的发 Tweet 功能，大家可以在各个兴趣小组的板块下自由交流。全球某工商旨在帮助大家寻找在校内志同道合的朋友，解决大家打球时找不到球友，跑步时一个人太无聊的尴尬场面。<br />联系邮箱: shuaiyi@@qqmgs.com
                    </p>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">链接</h5>
                    <ul>
                        <li><a class="white-text" href="#!">浙江工商大学官网</a></li>
                        <li><a class="white-text" href="#!">信息学院官网</a></li>
                    </ul>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">广告赞助联系</h5>
                    <ul>
                        <li><a class="white-text" href="#!">shuaiyi@@qqmgs.com</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container row">
                全球某工商在线 · 专属商大学生的社交网络 · 浙ICP备15036767号 · @{
                    Html.RenderAction("GetTotalUser", "Users");
                } · @{Html.RenderAction("GetDailyTweetPosts", "Tweets");}
            </div>
        </div>
    </footer>


    <!-- Scripts-->
    <script src="~/Scripts/MaterizeJS/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/MaterizeJS/materialize.js"></script>
    <script src="~/Scripts/MaterizeJS/init.js"></script>

</body>
</html>
