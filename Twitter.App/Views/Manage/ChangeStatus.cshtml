@model Twitter.App.Models.ViewModels.ChangeStatusViewModel
@{
    ViewBag.Title = "Change Status";
}
<h2>@ViewBag.Title.</h2>
@using (Html.BeginForm("ChangeStatus", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Status Form</h4>
    <hr />
    @Html.ValidationSummary(string.Empty, new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.OldStatus, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @ViewBag.oldStatus
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Status, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Status, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}